{
  "buildCommand": "cd api && npm install && npx prisma generate && cd ../frontend && npm install && npx vite build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@5.3.7",
      "maxDuration": 30
    },
    "api/upload/single.ts": {
      "runtime": "@vercel/node@5.3.7",
      "maxDuration": 60
    },
    "api/upload/gallery/[machineId].ts": {
      "runtime": "@vercel/node@5.3.7",
      "maxDuration": 60
    }
  }
} 