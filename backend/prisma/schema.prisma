// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PaymentType {
  COIN
  BANKNOTE
  GIROCARD
  CREDIT_CARD
}

enum UserRole {
  ADMIN
  OWNER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?  // Nullable for future SSO users
  name      String
  role      UserRole @default(OWNER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  machines  VendingMachine[]
  reviews   Review[]
  sessions  Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VendingMachine {
  id             String           @id @default(uuid())
  name           String
  location       String
  description    String?
  logo           String?          // Added: Path to uploaded logo file
  coordinates    String?          // Google Maps coordinates (e.g., "52.5200,13.4050")
  isActive       Boolean          @default(true)
  ownerId        Int
  owner          User             @relation(fields: [ownerId], references: [id])
  products       MachineProduct[]
  paymentMethods MachinePaymentMethod[]
  photos         Photo[]
  reviews        Review[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @updatedAt
}

model Product {
  id          String           @id @default(uuid())
  name        String
  description String?
  photo       String?
  price       Float?           // Default price
  category    String?          // Product category (e.g., Snacks, Cigarettes, Cold drinks, Hot drinks)
  isAvailable Boolean          @default(true)
  machines    MachineProduct[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now()) @updatedAt
}

model MachineProduct {
  id               String         @id @default(uuid())
  vendingMachineId String
  productId        String
  price            Float?         // Override price for this machine
  isAvailable      Boolean        @default(true)
  vendingMachine   VendingMachine @relation(fields: [vendingMachineId], references: [id], onDelete: Cascade)
  product          Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt

  @@unique([vendingMachineId, productId])
}

model PaymentMethodType {
  id          String   @id @default(uuid())
  type        PaymentType @unique
  name        String
  icon        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  machines    MachinePaymentMethod[]
}

model MachinePaymentMethod {
  id                 String           @id @default(uuid())
  vendingMachineId   String
  paymentMethodTypeId String
  available          Boolean          @default(false)
  vendingMachine     VendingMachine   @relation(fields: [vendingMachineId], references: [id], onDelete: Cascade)
  paymentMethodType  PaymentMethodType @relation(fields: [paymentMethodTypeId], references: [id], onDelete: Cascade)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @default(now()) @updatedAt

  @@unique([vendingMachineId, paymentMethodTypeId])
}

model Photo {
  id               Int              @id @default(autoincrement())
  url              String
  caption          String?
  fileType         String           @default("image") // "image" or "video"
  originalName     String?          // Original filename
  fileSize         Int?             // File size in bytes
  vendingMachineId String
  vendingMachine   VendingMachine   @relation(fields: [vendingMachineId], references: [id], onDelete: Cascade)
  createdAt        DateTime         @default(now())
}

model Review {
  id               Int              @id @default(autoincrement())
  rating           Int
  comment          String
  isApproved       Boolean          @default(false)
  userId           Int
  vendingMachineId String
  user             User             @relation(fields: [userId], references: [id])
  vendingMachine   VendingMachine   @relation(fields: [vendingMachineId], references: [id], onDelete: Cascade)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @default(now()) @updatedAt
}
